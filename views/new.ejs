<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Post title">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input type="text" name="blog[imgUrl]" placeholder="Image url">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="blog[content]" placeholder="Content"></textarea>
        </div>
        <input class="ui violet basic button" type="submit">
    </form>
</div>

