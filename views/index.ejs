<% include partials/header %>

<div class="container">
    <h1>
        This is the index page.
    </h1>
</div>

<% blogs.forEach((blog) => { %>
    <div>
		<h2>
			<%= blog.title %>
		</h2>
		<p>
			Created on <%= blog.dateCreated %>
		</p>
		<img src="<%= blog.imgUrl%>">
		<p>
			<%= blog.content.substring(0, 100) %>
		</p>
		<a href="/blogs/<%= blog._id %>">Read More</a>
    </div>

<% }) %>
<% include partials/footer %>